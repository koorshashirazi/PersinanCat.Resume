@inject IStringLocalizer<Skills> L
@inject IJSRuntime JSRuntime

<div class="section px-3 px-lg-4 pt-5 skills" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center" style="cursor: pointer" @onclick="ToggleDiv">@L["MySkills"]</h2>
        </div>
        <div class="@_toggleClass skills-section">
            <div class="text-center">
                <p class="mx-auto mb-3" style="max-width:600px">@L["SkillsDescription"]</p>
            </div>
            <div class="p-3">
                <div class="row">
                    <div class="col-md-5">
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span class="me-auto">@L["Frontend"]</span><span>@L["FrontendPercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="80" data-delay="100"
                                     style="width: 0%"
                                     aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span class="me-auto">@L["BackendNet"]</span><span>@L["BackendNetPercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="90" data-delay="200"
                                     style="width: 0%"
                                     aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span class="me-auto">@L["Database"]</span><span>@L["DatabasePercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="70" data-delay="300"
                                     style="width: 0%"
                                     aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span class="me-auto">@L["Testing"]</span><span>@L["TestingPercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="70" data-delay="600"
                                     style="width: 0%"
                                     aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 offset-md-2">
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span
                                    class="me-auto">@L["Microservices"]</span><span>@L["MicroservicesPercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="70" data-delay="300"
                                     style="width: 0%"
                                     aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span class="me-auto">@L["CloudAzure"]</span><span>@L["CloudAzurePercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="60" data-delay="400"
                                     style="width: 0%"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                                <span class="me-auto">@L["DevOps"]</span><span>@L["DevOpsPercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="60" data-delay="500"
                                     style="width: 0%"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder">
                            <span
                                class="me-auto">@L["SoftwareArchitecture"]</span><span>@L["SoftwareArchitecturePercentage"]</span>
                            </div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary animated-progress" role="progressbar" 
                                     data-width="60" data-delay="600"
                                     style="width: 0%"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _isVisible = true;
    private string _toggleClass = "expanded";

    private void ToggleDiv()
    {
        _isVisible = !_isVisible;
        _toggleClass = _isVisible ? "expanded" : "collapsed";
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Let the JavaScript file handle the animation
            await Task.Delay(500);
            await JSRuntime.InvokeVoidAsync("initializeSkillsAnimation");
        }
    }
}
